<div class="wrapper">
    <div class="container">
        <table class="text-center">
            <thead class="tblhead">
                <tr>
                    <th>
                        Action
                        <div class="c1">
                            Action
                        </div>
                    </th>
                    <th>
                        Good Reciept No
                        <div class="c2">
                            Good Reciept No
                        </div>
                    </th>
                    <th>
                        GR Date
                        <div class="c2">
                            GR Date
                        </div>
                    </th>
                    <th>
                        Po No
                        <div class="c2">
                            Po No
                        </div>
                    </th>
                    <th>
                        Supplier Name
                        <div class="c2">
                            Supplier Name
                        </div>
                    </th>
                    <th>
                        Supplier Date
                        <div class="c2">
                            Supplier Date
                        </div>
                    </th>
                    <th>
                        Supplier Inv No
                        <div class="c2">
                            Supplier Inv No
                        </div>
                    </th>                    
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="L in GRList">
                    <td>
                        <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="VIEW" ng-click="LoadGoodsRecieptPopup(L.Id)">
                            <i class="fa fa-eye"></i>
                        </button>
                        <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="EDIT" ng-click="LoadGoodsRecieptPopup(L.Id)">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="DELETE" ng-click="DeleteGoodsReciept(L.Id)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                    <td>
                        {{L.GoodRecieptNo}}
                    </td>
                    <td>
                        {{L.GRDate}}
                    </td>
                    <td>
                        {{L.PoNo}}
                    </td>
                    <td>
                        {{L.SupplierName}}
                    </td>
                    <td>
                        {{L.SupplierDate}}
                    </td>
                    <td>
                        {{L.SupplierInvNo}}
                    </td>
                    
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <div class="c1">
                            <div class="row p-0">
                                <div class="col-md-2 p-0">
                                    <span class="form-group pull-left page-size form-inline">
                                        <b>Records per page : &nbsp;&nbsp;</b>
                                        <select id="ddlGRPageSize" class="form-control control-color"
                                                ng-model="GRPageSize"
                                                ng-change="GRChangePageSize()">
                                            <option value="100000">All</option>
                                            <option value="5">5</option>
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </span>
                                </div>
                                <div class="col-md-8 pull-right p-0">
                                    <div class="row p-0">
                                        <div class="col-md-10 p-0">
                                            <pagination total-items="GRTotalCount" ng-change="GRPageChanged()" items-per-page="GRPageSize" direction-links="true" ng-model="GRPageIndex" max-size="maxsize" class="pagination pull-right" boundary-links="true" rotate="false" num-pages="GRNumPages"></pagination>
                                        </div>
                                        <div class="col-md-2 p-0">
                                            <a class="btn btn-primary p-2 pull-right">Page: {{GRPageIndex}} / {{GRNumPages}}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>

                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/Areas/Stores/Scripts/GoodsReciept.js"></script>
