
@{
    ViewBag.Title = "PartialCommonDashboard";
}

<div ng-controller="CommonController" class="row">
    <form id="formSaveCountryData" style="width:100%">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">
                            Country Name
                        </label>
                        @Html.TextBox("CountryName", "", new
                   {
                       @class = "form-control mr-2 requiredValidation",
                       @id = "CommCountryName",
                       @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                   })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            GEO Area
                        </label>
                        @Html.TextBox("GeoArea", "", new
                   {
                       @class = "form-control mr-2 requiredValidation",
                       @id = "CommGeoArea",
                       @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                   })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            GEO Code
                        </label>
                        @Html.TextBox("GeoCode", "", new
                   {
                       @class = "form-control mr-2 requiredValidation",
                       @id = "CommGeoCode",
                       @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                   })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Country List
                        </label>
                        @Html.DropDownList("CountryId", new SelectList(ViewBag.ListCountry, "DataValueField", "DataTextField", "Select"),
                       new
                       {
                           @class = "form-control requiredValidation",
                           @id = "CommCountryList",
                           ng_model = "CommCountryId",
                           @data_inneraction = "validationCall",
                           @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                       })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 pt-4 text-center">
                    <button id="SaveCountryDetails" ng-click="SaveCountryDetails()" style="font-size:18px" type="button" class="btn btn-success btn-sm save_results">Save</button>
                    <button id="SaveStateDetails" ng-click="DeleteTableData(CommCountryId,'Country')" style="font-size:18px" type="button" class="btn btn-danger btn-sm save_results">Delete</button>
                </div>
            </div>

            
        </div>

    </form>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        window.SaveCountryDetail = '@Url.Action("SaveCountryDetails", "Common")';
        window.DeleteTableDatas = '@Url.Action("DeleteTableDatas", "Common")';

    });


</script>

