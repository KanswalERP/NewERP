
@{
    ViewBag.Title = "PartialAddState";
}

<div ng-controller="CommonController" class="row">
    <form id="formSaveStateData" style="width:100%">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">
                            Country Name
                        </label>
                        @Html.DropDownList("CountryId", new SelectList(ViewBag.ListCountry, "DataValueField", "DataTextField", "Select"),
                       new
                       {
                           @class = "form-control requiredValidation",
                           @id = "STCountryName",
                           @data_inneraction = "validationCall",
                           @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)",
                           @onchange = "GetStatesForCountry(this.value, 'STStateList')"
                       })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            State Name
                        </label>
                        @Html.TextBox("StateName", "", new
                   {
                       @class = "form-control mr-2 requiredValidation",
                       @id = "STState",
                       @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                   })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            State List
                        </label>
                        @Html.DropDownList("StateId", new SelectList(ViewBag.ListState, "DataValueField", "DataTextField", "Select"),
                       new
                       {
                           @class = "form-control requiredValidation",
                           @id = "STStateList",
                           ng_model = "STStateId",
                           @data_inneraction = "validationCall",
                           @onfocusout = "return ValidateRequiredFieldsOnFocusOut(this)"
                       })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 pt-4 text-center">
                    <button id="SaveStateDetails" ng-click="SaveStateDetails()" style="font-size:18px" type="button" class="btn btn-success btn-sm save_results">Save</button>
                    <button id="SaveStateDetails" ng-click="DeleteTableData(STStateId,'State')" style="font-size:18px" type="button" class="btn btn-danger btn-sm save_results">Delete</button>
                </div>
            </div>


        </div>

    </form>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        window.SaveStateDetails = '@Url.Action("SaveStateDetails", "Common")';
        window.DeleteTableDatas = '@Url.Action("DeleteTableDatas", "Common")';
    });
</script>

