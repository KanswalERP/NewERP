@using NtierMvc.Model
@using NtierMvc.Infrastructure

@model NtierMvc.Model.QuotationEntity
@{
    ViewBag.Title = "Technical";
}

<div class="row mt-3">
    <table class="table-borderless">
        <tr>
            <td>
                <button id="btnAdd" type="button" class="btn btn-outline-primary btn-sm" style="float: left;" ng-click="BindQuotationPopup()"><i class="fa fa-plus"></i><b> Add New Quotation</b></button>
            </td>
            <td>
                <label>Quote Type</label>
            </td>
            <td>
                <label>Customer Id</label>
            </td>
            <td>
                <label>Product Group</label>
            </td>
            <td>
                <label>Delivery Terms</label>
            </td>
        </tr>
        <tr>
            <td>
                <button id="btnRevisedQuote" type="button" class="btn btn-outline-info btn-sm" style="float: left;" ng-click="BindRevisedQuotationPopup()"><i class="fa fa-plus"></i><b> Add New Revised Quotation</b></button>
            </td>
            <td>
                @Html.DropDownList("QuoteType", new SelectList(@ViewBag.ListQuoteType, "DataStringValueField", "DataTextField", "Select"),
                    new
                    {
                        @class = "form-control",
                        ng_model = "SearchQuoteType",
                        @id = "QTQuoteType"
                    })
            </td>
            <td>
                @Html.DropDownList("CustomerId", new SelectList(@ViewBag.ListCustomerId, "DataStringValueField", "DataTextField", "Select"),
               new
               {
                   @class = "form-control",
                   ng_model = "SearchQuoteCustomerID",
                   @id = "QTCustomerId",
                   @multiple = true
               })
            </td>
            <td>
                @Html.DropDownList("ProductGroup", new SelectList(@ViewBag.ListProdName, "DataStringValueField", "DataTextField", "Select"),
               new
               {
                   @class = "form-control",
                   ng_model = "SearchQuoteProductGroup",
                   @id = "QTProductGroup",
                   @multiple = true
               })
            </td>
            <td>
                @Html.DropDownList("DeliveryTerms", new SelectList(@ViewBag.ListDeliveryTerms, "DataStringValueField", "DataTextField", "Select"),
               new
               {
                   @class = "form-control",
                   ng_model = "SearchDeliveryTerms",
                   @id = "QTDeliveryTerms",
                   @multiple = true
               })
            </td>
            <td>
                <button class="btn btn-link" type="button" id="btnSearch" ng-click="FetchQuotationList()">
                    <i class="fa fa-search"></i>
                </button>
            </td>
        </tr>
    </table>
</div>

