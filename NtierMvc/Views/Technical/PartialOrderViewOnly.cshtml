<script type="text/javascript">


    $(document).ready(function () {

        window.GetDdlValueForQuote = '@Url.Action("GetDdlValueForQuote","Technical")';
        window.OrderDetailsPopup = '@Url.Action("OrderPopup", "Technical")';
        window.ItemDetailsPopup = '@Url.Action("ItemPopup", "Technical")';
        window.CallApi = '@Url.Action("CallApi", "Technical")';


        $('#ORQuoteType').chosen({
            width: "210px",
            placeholder_text_single: "Select QuoteType",
            placeholder_text_multiple: "Select QuoteType"
        });

        $('#ORVendorId').chosen({
            width: "210px",
            placeholder_text_single: "Select Vendor Id",
            placeholder_text_multiple: "Select Vendor Id"
        });

        $('#ORProductGroup').chosen({
            width: "210px",
            placeholder_text_single: "Select Product Group",
            placeholder_text_multiple: "Select Product Group"
        });

        $('#ORDeliveryTerms').chosen({
            width: "210px",
            placeholder_text_single: "Select Delivery Terms",
            placeholder_text_multiple: "Select Delivery Terms"
        });

        $("#ORQuoteType").chosen().change(
            function GetQuoteType() {
                //var QuoteType = $('#QTQuoteType').val();
                var QuoteType = '';
                var x = document.getElementById("ORQuoteType");
                for (var i = 0; i < x.options.length; i++) {
                    if (x.options[i].selected == true) {
                        //alert(x.options[i].value);
                        QuoteType = QuoteType + x.options[i].value + ',';
                    }
                }

                QuoteType = QuoteType.substring(0, QuoteType.length - 1);

                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForQuote,
                    data: { QuoteType: QuoteType, type: 'VendorId' },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#ORVendorId").empty();
                            $.each(res, function (i, item) {
                                $("#ORVendorId").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#ORVendorId").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function (result) {
                        alert(result)
                    }
                });
            }
        )

        $("#ORVendorId").chosen().change(
            function GetProductGroup() {
                //var VendorId = $('#QTVendorId').val();
                debugger;
                var VendorId = '';
                var x = document.getElementById("ORVendorId");
                for (var i = 0; i < x.options.length; i++) {
                    if (x.options[i].selected == true) {
                        //alert(x.options[i].value);
                        VendorId = VendorId + x.options[i].value + ',';
                    }
                }

                VendorId = VendorId.substring(0, VendorId.length - 1);

                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForQuote,
                    data: { VendorId: VendorId, type: 'ProductGroup' },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#ORProductGroup").empty();
                            $.each(res, function (i, item) {
                                $("#ORProductGroup").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#ORProductGroup").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function (result) {
                        alert(result)
                    }
                });
            }
        )


    });

    function CallApi() {
        var QuoteType = $("#QuoteOrderFormType").val();
        var QuoteNo = $("#QuoteOrderFormNo").val();

        var MultiQuoteNos = $('#MultiQuoteNos').val() + $("#QuoteOrderFormNo option:selected").text() + '/';
        if ($("#QuoteOrderFormNo option:selected").val() != '')
            $('#MultiQuoteNos').val(MultiQuoteNos);

        $.ajax({
            type: 'POST',
            url: window.CallApi,
            data: JSON.stringify({ }),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                alert(data);
            },
            error: function (x, e) {
                alert('Error Comes');
            }
        })
    }
</script>



