<script type="text/javascript">

    $(document).ready(function () {

        window.GetVendorListForCusts = '@Url.Action("GetVendorListForCust","Customer")';
        window.GetDdlValueForCustomer = '@Url.Action("GetDdlValueForCustomer", "Customer")';

        $('#CUVendorType').chosen({
            width: "150px",
            placeholder_text_single: "Select VendorType"
        });

        $('#CUVendorNatureId').chosen({
            width: "210px",
            placeholder_text_single: "Select VendorNatureId"
        });

        $('#CUVendorId').chosen({
            width: "150px",
            placeholder_text_single: "Select VendorId"
        });

        $('#CUVendorName').chosen({
            width: "210px",
            placeholder_text_single: "Select VendorName"
        });

        $('#CUFunctionalArea').chosen({
            width: "180px",
            placeholder_text_single: "Select FunctionalArea"
        });

        //$('#CUQuoteType').chosen({
        //    width: "120px",
        //    placeholder_text_single: "Select QuoteType"
        //});


        $('#CUVendorType').chosen().change(
            function GetVendorType() {
                var VendorType = $('#CUVendorType').val();
                
                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForCustomer,
                    data: { type: 'VendorNature', VendorType: VendorType },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#CUVendorNatureId").empty();
                            $.each(res, function (i, item) {
                                $("#CUVendorNatureId").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#CUVendorNatureId").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function () {
                        alert(result);
                    }
                });
            }
        )


        $("#CUVendorNatureId").chosen().change(
            function GetVendorName() {
                var VendorNatureId = $('#CUVendorNatureId').val();

                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForCustomer,
                    data: { VendorNatureId: VendorNatureId, type: 'VendorId' },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#CUVendorId").empty();
                            $.each(res, function (i, item) {
                                $("#CUVendorId").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#CUVendorId").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function () {
                        alert(result);
                    }
                });
            }
        )

        $("#CUVendorId").chosen().change(
            function GetFunctionalArea() {
                //var VendorNameId = $('#CUVendorId').val();
                var VendorNameId = '';
                var x = document.getElementById("CUVendorId");
                for (var i = 0; i < x.options.length; i++) {
                    if (x.options[i].selected == true) {
                        //alert(x.options[i].value);
                        VendorNameId = VendorNameId + x.options[i].value + ',';
                    }
                }

                VendorNameId = VendorNameId.substring(0, VendorNameId.length - 1);

                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForCustomer,
                    data: { VendorName: VendorNameId, type: 'VendorName' },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#CUVendorName").empty();
                            $.each(res, function (i, item) {
                                $("#CUVendorName").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#CUVendorName").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function () {
                        alert(result);
                    }
                });
            }
        )

        $("#CUVendorName").chosen().change(
            function GetFunctionalArea() {
                var VendorNameId = $('#CUVendorName').val();

                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'GET',
                    url: window.GetDdlValueForCustomer,
                    data: { VendorName: VendorNameId, type: 'FunctionalArea' },
                    success: function (res) {
                        if (res.length > 0) {
                            $("#CUFunctionalArea").empty();
                            $.each(res, function (i, item) {
                                $("#CUFunctionalArea").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                                $("#CUFunctionalArea").trigger("chosen:updated");
                            })
                        }
                    },
                    error: function () {
                        alert(result);
                    }
                });
            }
        )


    });

    //COMPARING MOBILE NUMBER AND ALTERNATIVE MOBILE NUMBER
    var alterMobileNumber = $('#altrmobileNumber');
    alterMobileNumber.on('blur', function () {
        $('#sameMobileNumber').hide();
        if ($('#mobileNumber').val() == '') {
        }
        else {
            if (alterMobileNumber.val() == $('#mobileNumber').val()) {
                $('#sameMobileNumber').show();
                alterMobileNumber.val('');
            }
        }
    });

    $(document).on("blur", ".check_mobileNumber", function () {
        validateMobileNumberforFirst($(this));
    })

    function validateMobileNumberforFirst(e) {
        var mobileNumber = $(e).val();
        var one1 = String(mobileNumber).charAt(0);
        var one_as_number1 = Number(one1);
        if (one1 != "") {
            if (one_as_number1 < 6) {
                //$("#spn-Sucess-Failure").text('Mobile Number should start with 7 or 8 or 9')
                //$("#Sucess-Failure").modal('show');
                alertNotification('Please Enter valid Mobile Number');
                $(e).val('');
            }
        }
    }
   
    function GetVendorListForCust() {
        let VendorNature = $('#VendorNatureId').val();

        $.ajax({
            type: 'GET',
            url: window.GetVendorListForCusts,
            dataType: 'JSON',
            data: { VendorNatureId: VendorNature },
            contentType: 'application/json; charset=utf-8',
            success: function (res) {
                if (res.length > 0) {
                    $("#VendorId").empty();
                    $.each(res, function (i, item) {
                        $("#VendorId").append($('<option></option>').val(item.DataStringValueField).html(item.DataTextField));
                    })
                }
            },
            error: function (res) {
                alertNotification('Some Error Occurred. Please try later.');
            }
        })
    }


</script>


