
@{
    ViewBag.Title = "CustomerMaster";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/tabs.js"></script>

<style type="text/css">
    form .form-group .fileinput {
        width: 100%;
    }

    .modal-header .close {
        padding: 0px !important;
        margin: 0px !important;
        margin-top: 10px !important;
    }

    form .form-group .error {
        display: none;
        font-size: 12px;
        font-style: italic;
        color: #e9573f;
    }

    form .form-group .validationError {
        display: none;
        font-size: 12px;
        font-style: italic;
        color: #e9573f;
    }

    .errorClass {
        border: 1px solid red !important;
    }

    .ro-backcolor {
        background-color: #fff !important;
    }

    /*For fixed table*/
    .wrapper {
        width: 100%;
        position: relative;
        border: 1px solid #000;
        background: #faebd7;
        overflow: hidden;
        border-radius: 7px;
    }

    .container {
        overflow-y: auto;
        height: 500px;
        border-top: 41px solid transparent;
        border-bottom: 41px solid transparent;
        max-width: 1400px;
        margin-bottom: 25px;
    }

    table {
        border-spacing: 0;
        border-collapse: collapse;
        width: 100%;
    }

    td + td {
        border-left: 1px solid #fff;
    }

    .tblhead {
        border-bottom: 1px solid #fff;
        /*background: #faebd7;*/
        color: transparent;
        padding: 2px;
    }

    thead tr th,
    tfoot tr td {
        height: 0;
        line-height: 0;
        margin: 0;
        padding-top: 0;
        padding-bottom: 0;
        /*color: transparent;*/
        border: none;
        white-space: nowrap;
    }

        thead tr th div,
        tfoot tr td div {
            position: absolute;
            color: #000;
            height: 40px;
            padding: 10px;
            margin-left: -10px;
            line-height: normal;
            width: 100%;
            z-index: 2;
            text-align: left;
            font-weight: bold;
        }

        /*thead tr th div {
            border-left: 1px solid #000;
            border-bottom: 1px solid #000;
        }

        tfoot tr td div {
            border-top: 1px solid #000;
        }

            tfoot tr td div.c1,
            thead tr th div.c1 {
                background: violet;
            }

            tfoot tr td div.c2,
            thead tr th div.c2 {
                background: green;
            }

            tfoot tr td div.c3,
            thead tr th div.c3 {
                background: yellow;
            }*/

        thead tr th div {
            top: 0;
        }

        tfoot tr td div {
            bottom: 0;
        }

        thead tr th:first-child div,
        tfoot tr td:first-child div {
            border-left: none;
        }

    .pagination {
        margin: 0px;
    }
</style>

<div ng-controller="MainController">
    <div class="tab">
        <button class="tablinks" onclick="openCity(event, 'CustomerPartialView')" id="defaultOpen" ng-click="FetchCustomerList()">Customer</button>
        <button class="tablinks" onclick="openCity(event, 'EnquiryPartialView')" ng-click="FetchEnquiryList()">Enquiry</button>
        <button class="tablinks" onclick="openCity(event, 'QuotationPartialView')" ng-click="FetchQuotationList()">Quotation</button>
        <button class="tablinks" onclick="openCity(event, 'OrdersPartialView')" ng-click="FetchOrdersList()">Order</button>
    </div>

    <!-- Tab content -->
    <div id="CustomerPartialView" class="tabcontent">
        @Html.Partial("PartialCustomer")
    </div>

    <div id="EnquiryPartialView" class="tabcontent">
        @Html.Partial("../Enquiry/PartialEnquiry")
    </div>

    <div id="QuotationPartialView" class="tabcontent">
        @Html.Partial("../Quotation/PartialQuotation")
    </div>

    <div id="OrdersPartialView" class="tabcontent">
        @Html.Partial("../Technical/PartialOrderViewOnly")
    </div>
</div>

<script>
        document.getElementById("defaultOpen").click();
    
    $(document).ready(function () {

        window.OtherDetailsPopup = '@Url.Action("CustomerPopup", "Customer")';
        window.CustomerWithSearch = '@Url.Action("CustomerWithSearch", "Customer")';
        
        window.SaveCustomer = '@Url.Action("SaveCustomerDetails", "Customer")';
        window.StateDetail = '@Url.Action("GetStateDetail", "Customer")';      
        
        window.OtherDetailsPopup = '@Url.Action("CustomerPopup", "Customer")';
        window.CustomerWithSearch = '@Url.Action("CustomerWithSearch", "Customer")';
        window.FetchCustomerList = '@Url.Action("FetchCustomerList", "Customer")';
        window.DeleteCustomerDetail = '@Url.Action("DeleteCustomerDetail", "Customer")';
        
        window.EnquiryDetailsPopup = '@Url.Action("EnquiryPopup", "Technical")';
        window.FetchEnquiryList = '@Url.Action("FetchEnquiryList", "Enquiry")';
        window.DeleteEnquiryDetail = '@Url.Action("DeleteEnquiryDetail", "Technical")';

        window.QuotationDetailsPopup = '@Url.Action("QuotationPopup", "Technical")';
        window.RevisedQuotationDetailsPopup = '@Url.Action("RevisedQuotationPopup", "Technical")';
        window.GetPrepQuoteNo = '@Url.Action("GetPrepQuoteNo", "Technical")';
        window.FetchQuotationList = '@Url.Action("FetchQuotationList", "Technical")';
        window.FetchOrdersList = '@Url.Action("FetchOrdersList", "Technical")';

    })

</script>