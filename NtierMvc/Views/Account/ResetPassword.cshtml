@model DVETPrivateITI.Entities.Account.ChangePasswodEntity
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8 mx-auto">
    <div class="pvt-iti-login-container">

        <div class="pvt_iti_login_titlte">Reset Password</div>
        @using (Html.BeginForm("ResetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "formResetPassword", @id = "frmResetPassword" }))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @*<input type="text" placeholder="Registration Number" name="regNumbr" class="form-control" />*@
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control",@Type="Password", @placeholder = "New Password" })
                    </div>
                    <div class="form-group">
                        @*<input type="password" placeholder="New Password" name="newPwd" id="password" class="form-control" />*@
                        @Html.TextBoxFor(m => m.ConfPassword, new { @class = "form-control", @Type = "Password", @placeholder = "Confirm New Password" })
                    </div>
                    @*<div class="form-group">
                            <input type="password" placeholder="Conform New Password" id="confirmpassword" name="confNewPwd" class="form-control" />
                            @Html.TextBoxFor(m => m.ConfPassword, new { @class = "form-control", @Type = "Password", @placeholder = "Confirm New Password" })
                        </div>*@
                    <div class="form-group text-center">
                        <button type="submit" id="btnSubmit" class="btn btn-primary d-block w-100">Submit</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

